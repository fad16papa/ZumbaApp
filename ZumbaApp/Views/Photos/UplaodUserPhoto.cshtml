@model ZumbaApp.Models.PhotoModel

@{
    Layout = null;
}

<!-- Modal -->
<div class="modal fade" id="UploadPhotoModal" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false"
    aria-labelledby="UploadPhotoModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="UploadPhotoModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form enctype="multipart/form-data" method="POST">
                    <div class="form-group">
                        <label asp-for="PhotoFile" class="col-sm-3 col-form-label">Please upload file here</label>
                        <div class="col-sm-12">
                            <div class="custom-file">
                                <input asp-for="PhotoFile" class="custom-file-input" type="file">
                                <label class="custom-file-label">Choose File...</label>
                                <span asp-validation-for="PhotoFile" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="m-3">
                            <button id="btnUpload" class="btn btn-primary" asp-controller="Photos"
                                asp-action="UplaodUserPhoto" type="submit" value="Upload">
                                Upload
                            </button>
                        </div>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Upload</button>
            </div>
        </div>
    </div>
</div>